
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/_Shared/_LayoutPage.cshtml";
}

<div class="content-wrapper">
    <div class="content">
        <div class="row">
            <div class="col-md-12">
                <div class="box  box-default box-solid">
                    <div class="box-header with-border">
                        <h3 class="box-title">
                            müşteri YÖNETİMİ
                        </h3>
                        <div class="box-tools pull-right">
                            <a href="/Customer/Insert" class="btn  btn-default" style="background-color:#a10909;color:white;">
                                <i class="fa fa-plus" aria-hidden="true" style="margin-right:5px;"></i>
                                YENİ EKLE
                            </a>
                        </div>
                    </div>
                    <div class="box-body">

                        <table id="example1" class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>Müşteri</th>
                                    <th>Telefon</th>
                                    <th>Email</th>
                                    <th>Şehir</th>
                                    <th>İşlem</th>
                                </tr>
                            </thead>
                            <tbody>

                                @if (Model != null)
                                {
                                    foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.NameSurname</td>
                                            <td>@item.Phone</td>
                                            <td>@item.Email</td>
                                            <td>@item.City</td>
                                            <td>
                                                <a href="/Customer/Update/@item.Id" class="btn btn-primary">Düzenle</a>
                                                <a href="/Customer/Delete/@item.Id" class="btn btn-danger">Sil</a>
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>



                        </table>



                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
